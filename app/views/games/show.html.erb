<h1>Game #<%= @game.id %></h1>

<svg height="250" width="200" class="figure-container">
  <!-- Rod-->
  <line x1="60" y1="20" x2="140" y2="20" />
  <line x1="140" y1="20" x2="140" y2="50" />
  <line x1="60" y1="20" x2="60" y2="230" />
  <line x1="20" y1="230" x2="100" y2="230" />

  <!-- Head -->
  <circle cx="140" cy="70" r="20" class="figure-part" id="errors-1" />
  <!-- Neck -->
  <line x1="140" y1="90" x2="140" y2="120" class="figure-part" id="errors-2" />
  <!-- Body -->
  <line x1="140" y1="120" x2="140" y2="150" class="figure-part" id="errors-3" />
  <!-- Arms -->
  <line x1="140" y1="120" x2="120" y2="100" class="figure-part" id="errors-4" />
  <line x1="140" y1="120" x2="160" y2="100" class="figure-part" id="errors-5" />
  <!-- Legs -->
  <line x1="140" y1="150" x2="120" y2="180" class="figure-part" id="errors-6" />
  <line x1="140" y1="150" x2="160" y2="180" class="figure-part" id="errors-7" />
</svg>

<div id="current-status">
  <%= render 'current', game: @game %>
</div>

<%= form_with url: play_game_path(@game), id: 'play-form' do |f| %>
  <div class="form-group">
    <%= f.text_field :letter, class: "form-control", placeholder: "Insert letter and press Enter" %>
  </div>
<% end %>
